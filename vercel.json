{
  "version": 2,
  "buildCommand": "sed -i 's|{{SUPABASE_URL}}|'$SUPABASE_URL'|g' public/env-config.js && sed -i 's|{{SUPABASE_KEY}}|'$SUPABASE_KEY'|g' public/env-config.js",
  "outputDirectory": ".",
  "installCommand": "",
  "rewrites": [
    { "source": "/", "destination": "/main.html" },
    { "source": "/game", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    }
  ]
} 